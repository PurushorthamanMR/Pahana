<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.booking.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Customer Servlet -->
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.booking.CustomerServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
        <init-param>
            <param-name>timeout</param-name>
            <param-value>30000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/CustomerServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Book Servlet -->
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.booking.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/BookServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Transaction Servlet -->
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.booking.TransactionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/TransactionServlet</url-pattern>
    </servlet-mapping>
    
    <!-- User Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.booking.UserServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
        <init-param>
            <param-name>timeout</param-name>
            <param-value>30000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Help Servlet -->
    <servlet>
        <servlet-name>HelpServlet</servlet-name>
        <servlet-class>com.booking.HelpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelpServlet</servlet-name>
        <url-pattern>/HelpServlet</url-pattern>
    </servlet-mapping>
    

    
    <!-- User Role Servlet -->
    <servlet>
        <servlet-name>UserRoleServlet</servlet-name>
        <servlet-class>com.booking.UserRoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserRoleServlet</servlet-name>
        <url-pattern>/UserRoleServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Book Category Servlet -->
    <servlet>
        <servlet-name>BookCategoryServlet</servlet-name>
        <servlet-class>com.booking.BookCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookCategoryServlet</servlet-name>
        <url-pattern>/BookCategoryServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Stock Servlet -->
    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>com.booking.StockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/StockServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Profile Servlet -->
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.booking.ProfileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/ProfileServlet</url-pattern>
    </servlet-mapping>
    

    
    <!-- Chart Servlet -->
    <servlet>
        <servlet-name>ChartServlet</servlet-name>
        <servlet-class>com.booking.ChartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChartServlet</servlet-name>
        <url-pattern>/ChartServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.booking.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.booking.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>408</error-code>
        <location>/error.jsp</location>
    </error-page>
</web-app>
