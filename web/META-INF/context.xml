<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Pahana_BookStore">
    <Resource name="jdbc/pahana" 
              auth="Container" 
              type="javax.sql.DataSource"
              maxTotal="20" 
              maxIdle="10"
              maxWaitMillis="30000"
              initialSize="5"
              testOnBorrow="true"
              validationQuery="SELECT 1"
              validationInterval="30000"
              username="root" 
              password="password"
              driverClassName="com.mysql.cj.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/pahana?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true&amp;connectTimeout=10000&amp;socketTimeout=30000"/>
</Context>
